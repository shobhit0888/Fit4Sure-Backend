                    </table>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>

  <div class="modal" id="myModal">
    <!-- modal  -->
    <div class="modal-dialog modal-xl" role="document">
      <div class="modal-content">
        <div class="modal-header">
          <h5 class="modal-title" id="exampleModalLabel">Add New</h5>
          <button
            type="button"
            class="btn-close"
            data-bs-dismiss="modal"
            aria-label="Close"
          ></button>
        </div>
        <div class="body">
          <div class="modal-body">
            <form id="addnewweb_contact" class="mx-5 form-group font-weight-bold showcursor: true">
                <div class="row">
                    <div class="form-data mb-3 w-50">
                        <label for="name">Name</label>
                        <input type="text" name="name" id="name" class="form-control" placeholder="Enter name" >
                    </div>
                    <div class="form-data mb-3 w-50">
                        <label for="facebook">facebook</label>
                        <input type="text" name="facebook" id="facebook" class="form-control" placeholder="Enter facebook" >
                    </div>
                </div>
                <div class="row">
                    <div class="form-data mb-3 w-50">
                    <label for="twitter">Twitter</label>
                    <input type="text" name="twitter" id="twitter" class="form-control" placeholder="Enter twitter" >
                </div>
                <div class="form-data mb-3 w-50">
                    <label for="instagram">Instagram</label>
                    <input type="text" name="instagram" id="instagram" class="form-control" placeholder="Enter instagram" >
                </div>
            </div>
               
                    <div class="form-data mb-3">
                        <label for="experties">Experties</label>
                        <input type="text" name="experties" id="experties" class="form-control" placeholder="Enter experties" >
                    </div>
                  <div class="form-data mb-3">
                    <input
                      type="file"
                      class="form-control"
                      id="image"
                      name="image"
                    />
                  </div>
                

              <button
                type="submit"
                class="btn mt-3 pull-right"
                style="background-color: #6fd943; color: #fff"
              >
                Add
              </button>
            </form>
          </div>
          <div class="col-md-12 modal-footer"></div>
        </div>
      </div>
    </div>
    <!-- modal  -->
  </div>

  <!-- Modal body -->
  <div class="modal fade" id="edit">
    <div class="modal-dialog modal-lg">
      <div class="modal-content">
        <!-- Modal Header -->
        <div class="modal-header">
          <h4 class="modal-title">Edit web_contact</h4>
          <button type="button" class="close" data-dismiss="modal">
            &times;
          </button>
        </div>

        <!-- Modal body -->
        <div class="modal-body">
          <form
            id="editform"
            class="mx-5 form-group font-weight-bold showcursor: true"
          >
            <input type="hidden" id="editid" name="editid" />
            
            <div class="mb-3">
              <label>Name</label>
              <input
                id="editname"
                name="editname"
                type="text"
                class="form-control"
                placeholder="Enter Title"
              />
            </div>
            <div class="mb-3">
              <label>Facebook</label>
              <input
                id="editfacebook"
                name="editfacebook"
                type="text"
                class="form-control"
                placeholder="Enter facebook"
              />
            </div>
            <div class="mb-3">
              <label>Twitter</label>
              <input
                id="edittwitter"
                name="edittwitter"
                type="text"
                class="form-control"
                placeholder="Enter twitter"
              />
            </div>
            <div class="mb-3">
              <label>Instagram</label>
              <input
                id="editinstagram"
                name="editinstagram"
                type="text"
                class="form-control"
                placeholder="Enter instagram"
              />
            </div>
            <div class="mb-3">
              <label>Experties</label>
              <input
                id="editexperties"
                name="editexperties"
                type="text"
                class="form-control"
                placeholder="Enter experties"
              />
            </div>
            
            <button
              type="submit"
              class="btn mt-3 pull-right"
              style="background-color: #6fd943; color: #fff"
            >
              Save
            </button>
          </form>
        </div>
      </div>
    </div>
  </div>

</div>

<%- include('partials/footer.ejs') %>

<script>
  $(document).ready(function () {
    $("#example").DataTable();
  });

  var addweb_contactform = $("#addnewweb_contact");

  addweb_contactform.on("submit", addweb_contactubmitHandler);

  function addweb_contactubmitHandler(e) {
    e.preventDefault();

    // PREPARE FORM DATA
    var formData = new FormData(addweb_contactform[0]);

    // DO POST
    $.ajax({
      type: "POST",
      enctype: "multipart/form-data",
      processData: false,
      contentType: false,
      url: "/admin/web_contact/add",
      data: formData,
    })
      .done((res) => {
        if (res.error == true) {
          renderToast({ message: res.message, icon: "error" });
        } else {
          renderToast({ message: res.message, icon: "success" });
          setTimeout(() => {
            window.location.reload();
          }, 1000);
        }
      })
      .fail(function (xhr, status, error) {
        console.log(xhr.responseText);
      });
  }

  function deleteweb_contact(id) {

    if (confirm("Do you really want to delete this web_contact")) {
      // DO POST
      $.ajax({
        type: "POST",
        contentType: "application/json",
        url: "/admin/web_contact/delete",
        data: JSON.stringify({
          id: id,
        }),
      })
        .done((res) => {
          if (res.error == true) {
            renderToast({ message: res.message, icon: "error" });
          } else {
            renderToast({ message: res.message, icon: "success" });
            setTimeout(() => {
              window.location.reload();
            }, 2000);
          }
        })
        .fail(function (xhr, status, error) {
          console.log(xhr.responseText);
        });
    }
  }


  $(document).on("click", "#edit_btn", function (e) {
    let getData = $(e.target).attr("data-model");
    let finalData = JSON.parse(getData);
    $("#edit").modal("show");
    var data = finalData;
    $("#editid").val(data._id);
    $("#editname").val(data.name);
    $("#editfacebook").val(data.facebook);
    $("#edittwitter").val(data.twitter);
    $("#editinstagram").val(data.instagram);
    $("#editexperties").val(data.experties);
  });

  var editform = $("#editform");
  editform.on("submit", editSubmitHandler);

  function editSubmitHandler(e) {
    e.preventDefault();

    var formData = getFormData(editform);
    console.log(formData);

    // DO POST
    $.ajax({
      type: "POST",
      contentType: "application/json",
      url: "/admin/web_contact/edit",
      data: JSON.stringify(formData),
    })
      .done((res) => {
        if (res.error == true) {
          renderToast({ message: res.message, icon: "error" });
        } else {
          renderToast({ message: res.message, icon: "success" });
          setTimeout(() => {
            window.location.reload();
          }, 2000);
        }
      })
      .fail(function (xhr, status, error) {
        console.log(xhr.responseText);
      });
  }


</script>
