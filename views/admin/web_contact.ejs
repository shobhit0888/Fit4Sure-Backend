<%- include('partials/header.ejs') %> <%- include('partials/header.ejs') %>

<div class="main-content">
  <section class="section">
    <div class="section-body">
      <div class="row">
        <div class="col-12">
          <div class="card">
            <div
              class="card-header"
              style="height: 70px; background-color: #6fd943"
            >
              <div class="col-12">
                <h4 class="float-left">Fit Website Contact</h4>
                <div class="head-right-btn">
                  <!-- <button
                    class="btn btn-sm btn-secondary float-right card-text-btn"
                    type="submit"
                    data-bs-toggle="modal"
                    data-bs-target="#myModal"
                  >
                    <a
                      href="#"
                      data-ajax-popup="true"
                      data-size="md"
                      data-title="Invite New User"
                      data-toggle="tooltip"
                      title=""
                      data-bs-original-title="Add web_contact"
                    >
                      Add
                    </a>
                  </button> -->
                </div>
              </div>
            </div>

            <div class="card-body">
              <div class="row">
                <div class="col-12">
                  <div class="table-responsive p-2">
                    <table class="table table-bordered table-md">
                      <thead>
                        <tr>
                          <th>Name</th>
                          <th>Email</th>
                          <th>country</th>
                            <th>city</th>
                            <th>phone</th>
                            <th>gender</th>
                          <th>concern</th>
                          <!-- <th>Delete</th> -->
                          <th>time</th>
                        </tr>
                      </thead>
                      <tbody>
                        <% if(!web_contact[0]) { %>
                        <tr>
                          <td colspan="100%" class="text-center">No web_contact</td>
                        </tr>
                        <% } else {%> <% web_contact.forEach(function(web_contact){ %>
                        <tr>
                            <td><%= web_contact.contact_name %></td>
                            <td><%= web_contact.email %></td>
                            <td><%= web_contact.country %></td>
                            <td><%= web_contact.city %></td>
                            <td><%= web_contact.phone %></td>
                            <td><%= web_contact.gender %></td>
                            <td><%= web_contact.concern %></td>
                          
                          <td class="d-flex justify-content-between align-center">
                            <!-- <i
                            class="btn btn-info btn-lg fas fa-edit"
                              id="edit_btn"
                              data-toggle="modal"
                              data-model="<%= JSON.stringify(web_contact) %>"
                            ></i> -->
                            <i
                            class="btn btn-danger btn-lg fas fa-trash-alt"
                              onclick="deleteweb_contact('<%= web_contact._id %>');"
                            ></i>

                          </td>
                        </tr>
